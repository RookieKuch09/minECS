Checks: >
  clang-analyzer-*, 
  bugprone-*, 
  performance-*, 
  readability-*,
  modernize-*,
  cppcoreguidelines-*,
  -clang-analyzer-optin.cplusplus.VirtualCall

WarningsAsErrors: ''
HeaderFilterRegex: '.*'
FormatStyle: file

Checks: >
  -cppcoreguidelines-avoid-const-||-ref-data-members

Checks: >
  readability-identifier-naming
CheckOptions:
  - key: readability-identifier-naming.FunctionCase
    value: lower_case
  - key: readability-identifier-naming.ClassCase
    value: lower_case
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.NamespaceCase
    value: lower_case